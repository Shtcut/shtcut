    "test:e2e:gw": "jest --config apps/sht-gw/test/jest-e2e.json",
    "test:e2e:app": "jest --config apps/sht-app/test/jest-e2e.json",
    "test:e2e:worker": "jest --config apps/sht-worker/test/jest-e2e.json",
