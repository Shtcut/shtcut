{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "declaration": false,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
    },
    "exclude": [
        "node_modules",
    ]
}